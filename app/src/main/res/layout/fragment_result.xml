<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/result_name_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/result_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="sans-serif"
            android:hint="@string/hint_name"/>

        <EditText
            android:id="@+id/result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="sans-serif"
            android:hint="@string/hint_description"/>

    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/result_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/result_name_description"
        android:layout_above="@+id/result_data"
        android:name="com.google.android.gms.maps.MapFragment"/>

    <LinearLayout
        android:id="@+id/result_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/result_button_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_total_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/result_total_speed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:dividerPadding="32dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/result_button_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:minWidth="88dp"
            android:stateListAnimator="@anim/anim"
            android:text="@string/save"
            android:elevation="8dp"
            style="@style/RaisedGreen" />

        <Button
            android:id="@+id/result_button_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:minWidth="88dp"
            android:stateListAnimator="@anim/anim"
            android:text="@string/exit"
            android:elevation="8dp"
            style="@style/RaisedRed" />

    </LinearLayout>

</RelativeLayout>